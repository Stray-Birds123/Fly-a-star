  vertical-align: right;
}

/* 上传图片 */

.add-image {
  position: absolute;
  z-index: 2;
  left: 42%;
}

.add_icon {
  width: 100rpx;
  height: 80rpx;
  margin-top: 20rpx;
}

.picture_item {
  width: 240rpx;
  height: 220rpx;
  position: absolute;
  z-index: 2;
  left: 30%;
  top: 10rpx;
  bottom: 10rpx;
}

.picture_item image {
  width: 320rpx;
  height: 220rpx;
  position: absolute;
  z-index: -1;
}

.picture_item .delete {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  z-index: 2;
}

.scroll-view_H {
  display: flex;
  white-space: nowrap;
}

.scroll-view_H view {
  border: 5rpx solid white;
  display: inline-block;
  justify-content: center;
  align-items: center;
}

/* 输入照片描述部分 */

